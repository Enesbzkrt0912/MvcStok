@model MvcStok.Models.Entity.Musteriler


@{
    ViewBag.Title = "MusteriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Musteri",FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.MusteriID)
                    @Html.TextBoxFor(m => m.MusteriID, new { @class = "form-control" })
                    <br />
                    @Html.LabelFor(m => m.MusteriAdı)
                    @Html.TextBoxFor(m => m.MusteriAdı, new { @class = "form-control" })
                    <br />
                    @Html.LabelFor(m => m.MusteriSoyadı)
                    @Html.TextBoxFor(m => m.MusteriSoyadı, new { @class = "form-control" })
                </div>
                <div>
                    <button class="btn btn-warning">Müşteri Güncelle</button>
                </div>
            }

