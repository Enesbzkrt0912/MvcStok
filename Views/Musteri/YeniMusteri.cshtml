@model MvcStok.Models.Entity.Musteriler

@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Müsteri Adı</label>
        @Html.TextBoxFor(m => m.MusteriAdı, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MusteriAdı, "", new { @style = "color:red" })
    </div>
    <div>
        <label>Müsteri Soyadı</label>
        <input type="text" class="form-control" name="MusteriSoyadı" />
    </div>
    <div style="margin-top :15px">
        <button class="btn btn-info" id="btn1">Müşteri  Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Müşteri ekleme yapıldı');
        });
    </script>
</form>

