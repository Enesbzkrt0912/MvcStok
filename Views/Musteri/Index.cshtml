@using MvcStok.Models.Entity;
@model List<Musteriler>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index","Musteri",FormMethod.Get))
            {
                <p>
                    Aranacak Müşteri Adı:@Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }



<table class="table table-bordered">
    <tr>
        <td>MusteriId</td>
        <td>MusteriAdı</td>
        <td>MusteriSoyadı</td>
        <td>SİL</td>
        <td>GÜNCELLE</td>
        <td>ALERT SİL</td>
    </tr>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <td>@musteri.MusteriID</td>
                <td>@musteri.MusteriAdı</td>
                <td>@musteri.MusteriSoyadı</td>
                <td><a href="/Musteri/Sil/ @musteri.MusteriID" class="btn btn-danger">Sil</a> </td>
                <td><a href="/Musteri/MusteriGetir/ @musteri.MusteriID" class="btn btn-success">Güncelle</a></td>
                <td>@Html.ActionLink("SİL BUTONU", "Sil", new {id= musteri.MusteriID }, new {@class="btn btn-warning",onclick="return confirm('gerçekten silmek istiyor musunuz?')"})</td>
            </tr>
        }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri" class="btn btn-primary">Yeni Müsteri Ekle </a>

